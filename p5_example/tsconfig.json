{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "es5",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
